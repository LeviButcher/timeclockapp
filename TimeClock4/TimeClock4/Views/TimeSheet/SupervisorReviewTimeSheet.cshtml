@model SupervisorDetailTimeSheetViewModel

@{
    ViewData["Title"] = "SupervisorReviewTimeSheet";
}

<h2>SupervisorReviewTimeSheet</h2>

<h4>SupervisorDetailTimeSheetViewModel</h4>
<hr />
<div class="row">
    <form asp-action="SupervisorReviewTimeSheet">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User" class="control-label"></label>
                <input asp-for="User" class="form-control" readonly="readonly" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" readonly="readonly" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" readonly="readonly" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <label>
                        @Html.DisplayNameFor(model => model.ExemptFromOvertime)
                        @Html.DisplayFor(m => m.ExemptFromOvertime, new { @class = "form-control" })
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AmountMade" class="control-label"></label>
                <input asp-for="AmountMade" class="form-control" readonly="readonly" />
                <span asp-validation-for="AmountMade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeWorked" class="control-label"></label>
                <input asp-for="TimeWorked" class="form-control" readonly="readonly" />
                <span asp-validation-for="TimeWorked" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Approved" class="control-label"></label>
                <select asp-for="Approved" asp-items="Html.GetEnumSelectList<ApprovalType>()" class="form-control"></select>
                <span asp-validation-for="Approved" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReasonDenied" class="control-label"></label>
                <input asp-for="ReasonDenied" class="form-control" />
                <span asp-validation-for="ReasonDenied" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.TimesheetId)
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

