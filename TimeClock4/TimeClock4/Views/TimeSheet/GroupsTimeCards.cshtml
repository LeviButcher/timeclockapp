@model IEnumerable<TimeClock4.ViewModels.TimeSheetViewModels.PayrollTimesheetDetailViewModel>

@{
    ViewData["Title"] = "GroupsTimeCards";
}

<h2>GroupsTimeCards</h2>

<p>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supervisor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Approved)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExemptFromOvertime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AmountMade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeWorked)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supervisor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Approved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExemptFromOvertime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountMade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeWorked)
            </td>
            <td>
                @Html.HiddenFor(modelItem => item.TimesheetId)
                <a asp-action="CheckForTimesheet" asp-route-id="@item.TimesheetId">Payroll Check</a>
            </td>
        </tr>
}
    </tbody>
</table>
